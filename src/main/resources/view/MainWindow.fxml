<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" minHeight="600" minWidth="550" onCloseRequest="#handleExit" title="Study Buddy"
         type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/10.0.2-internal">
    <icons>
        <Image url="@/images/study_buddy.png"/>
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@StudyBuddyTheme.css"/>
                <URL value="@Extensions.css"/>
            </stylesheets>
            <VBox id="mainContainer" maxWidth="1.7976931348623157E308">
                <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
                    <Menu mnemonicParsing="false" text="Study Buddy">
                        <MenuItem mnemonicParsing="false" style="-fx-font-size: 10pt;" text="Dashboard"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" style="-fx-font-size: 10pt;"
                                  text="Exit Study Buddy"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="My Tasks">
                        <MenuItem mnemonicParsing="false" onAction="#handleShowAllTasks" style="-fx-font-size: 10pt;"
                                  text="All Tasks"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleShowArchivedTasks"
                                  style="-fx-font-size: 10pt;" text="Archived Tasks"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Modules">
                        <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp"
                                  style="-fx-font-size: 10pt;" text="Help"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Statistics">
                        <MenuItem fx:id="taskSummaryEntry" mnemonicParsing="false" onAction="#handleShowTaskSummary"
                                  style="-fx-font-size: 10pt;" text="Task Summary"/>
                        <MenuItem fx:id="usageSummaryEntry" mnemonicParsing="false" onAction="#handleHelp"
                                  style="-fx-font-size: 10pt;" text="Usage Summary"/>
                    </Menu>
                </MenuBar>
                <Pane maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="530.0"
                      style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-background-radius: 10;"
                      VBox.vgrow="NEVER">
                    <children>
                        <Label fx:id="brand" alignment="CENTER" minWidth="540.0" prefWidth="${brand.parent.width}"
                               style="-fx-text-fill: rgba(123, 87, 69, 0.8);" styleClass="app_brand" text="Study Buddy">
                            <padding>
                                <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
                            </padding>
                            <font>
                                <Font name="System Bold" size="13.0"/>
                            </font>
                        </Label>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="5.0"/>
                    </VBox.margin>
                </Pane>

                <HBox fx:id="taskListHolder" alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308"
                      maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">

                    <VBox fx:id="taskList" maxHeight="560.0" maxWidth="1200" minWidth="340"
                          styleClass="pane-with-border" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets bottom="5.0" left="10.0" right="5.0" top="10.0"/>
                        </padding>
                        <StackPane fx:id="taskListPanelPlaceholder" prefWidth="${brand.parent.width}"
                                   HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
                    </VBox>

                    <VBox fx:id="dueSoonList" maxHeight="560.0" minWidth="200" prefWidth="600"
                          styleClass="pane-with-border" VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="10.0" top="10.0"/>
                        </padding>
                        <StackPane fx:id="dueSoonListPanelPlaceholder" prefWidth="${brand.parent.width}"
                                   HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
                    </VBox>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
                <StackPane fx:id="taskSummaryHolder" maxHeight="1.7976931348623157E308"
                           maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                </StackPane>
                <VBox>
                    <children>


                        <StackPane fx:id="resultDisplayPlaceholder" maxHeight="150.0" maxWidth="1.7976931348623157E308"
                                   minHeight="120.0" prefHeight="200.0" styleClass="pane-with-border"
                                   VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets left="10.0" right="10.0" top="5.0"/>
                            </padding>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </StackPane>
                        <StackPane fx:id="commandBoxPlaceholder" maxWidth="1.7976931348623157E308" prefHeight="40.0"
                                   styleClass="pane-with-border" VBox.vgrow="NEVER">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                        </StackPane>
                        <StackPane fx:id="statusbarPlaceholder" maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER"/>
                    </children>
                </VBox>

            </VBox>
        </Scene>
    </scene>
</fx:root>
